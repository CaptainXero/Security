<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/titlebar"/>
    <RelativeLayout
        android:id="@+id/rl_tools_numblongs"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/iv_tools_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/numofbelongto"/>
        <ImageView
            android:id="@+id/iv_tools_right1"
            android:layout_width="13dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/right_arrows_red"/>
        <TextView
            android:id="@+id/tv_tools_decription1"
            style="@style/textview16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/iv_tools_left1"
            android:text="号码归属地查询"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="#000000"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tools_copySMS"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/iv_tools_left2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sms_backup"/>
        <ImageView
            android:id="@+id/iv_tools_right2"
            android:layout_width="13dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/right_arrows_red"/>
        <TextView
            android:id="@+id/tv_tools_decription2"
            style="@style/textview16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/iv_tools_left2"
            android:text="短信备份"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="#000000"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tools_backSMS"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/iv_tools_left3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sms_reduction"/>
        <ImageView
            android:id="@+id/iv_tools_right3"
            android:layout_width="13dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/right_arrows_red"/>
        <TextView
            android:id="@+id/tv_tools_decription3"
            style="@style/textview16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/iv_tools_left3"
            android:text="短信还原"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="#000000"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tools_appLock"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/iv_tools_left4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:background="@drawable/programoflock"/>
        <ImageView
            android:id="@+id/iv_tools_right4"
            android:layout_width="13dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/right_arrows_red"/>
        <TextView
            android:id="@+id/tv_tools_decription4"
            style="@style/textview16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38dp"
            android:layout_toRightOf="@+id/iv_tools_left4"
            android:text="程序锁"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="#000000"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>
