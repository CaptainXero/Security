<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/titlebar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#00FFFF">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/virusscan_icon"/>
        <TextView
            android:id="@+id/tv_lastscantime"
            style="@style/textview16sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_addscanvirus"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/iv_quickscan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/quickscan_icon"/>
        <TextView
            android:id="@+id/tv_addscan"
            style="@style/textview16sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_quickscan"
            android:text="全盘扫描"
            android:textColor="#1C86EE"/>
        <TextView
            style="@style/textview14sp"
            android:layout_below="@+id/tv_addscan"
            android:text="全盘扫描手机，杀毒更彻底"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_quickscan"
            android:layout_marginTop="10dp"
            android:textColor="#1C86EE"/>
        <View
            android:layout_width="13dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/rightarrow_blue"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="#838B83"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
